{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 10, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 5, // Gaps between modules (4px)
    "margin-top": 10,
    "margin-left": 10,
    "margin-right": 10,
    
    // Choose the order of the modules
    "modules-left": ["custom/apps", "hyprland/workspaces", "custom/media"],
    "modules-center": ["idle_inhibitor", "clock"],
    "modules-right": ["tray", "pulseaudio", "group/hardware", "network", "battery", "custom/powermenu"],

    // Modules configuration
    "hyprland/workspaces": {
    	"on-click": "activate",
        "active-only": false,
        "all-outputs": true,
    	"format": "",
    	"format-icons": {
             "urgent": "",
             "focused": "",
             "default": ""
        },
        "persistent_workspaces": {
             "*": 3
        }
    },

    "hyprland/window": {
	"format": "{title}",
	"rewrite": {
		"(.*) ‚Äî Mozilla Firefox":"ÓÄá  $1",
		"(.*) - Thunar":"ÔÅº  $1",
       		"~(.*)":"ÔÑ†  $1",
		"vim(.*)":"ÓüÖ  $1",
		"hyprconf":"ÓüÖ  hyprland.conf",
		"(.*) - gedit":"ÔÖú  $1",
		"(.*) - Discord":"Ôéí  $1",
		"Spotify Free":"ÔÜº Spotify"
	},
	"seperate-outputs": true
    },

    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "rewrite": {
            "Firefox Web Browser": "Firefox"
        }
    },

    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    }, 

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },

    "tray": {
        // "icon-size": 20,
        "spacing": 10
    },

    "clock": {
        "timezone": "Europe/London",
        "tooltip-format": "<big>{:%A, %D\n%d %B %Y}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },

    "group/hardware": {
        "orientation": "horizontal",
        "modules": [
            "cpu",
            "memory",
            "disk"
        ]
    },

    "cpu": {
        "format": "Ôíº  {usage}%",
        "on-click": "kitty -e htop"
    },
    
    "memory": {
        "format": "ÔÉâ  {}%",
        "on-click": "kitty -e htop"
    },
    
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{icon} {temperatureC}¬∞C",
        "format": "{icon} {temperatureC}¬∞C",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },
    
    "disk": {
        "format": "ÔÇ† {percentage_used}%",
        "path": "/",
        "on-click": "kitty -e htop"
    },
    
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†"]
    },
    
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Ôóß {capacity}%",
        "format-plugged": "Ôá¶  {capacity}%",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
    },
    
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´   {signalStrength}%",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        "tooltip-format": "{essid} - {ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        //"format-alt": "{ifname}:{essid} {ipaddr}/{cidr}",
	"on-click": "nm-connection-editor"
    },
    
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon} {volume}%",
        "format-bluetooth": "{icon} {volume}% Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        //"format-source": "{volume}% ÔÑ∞",
        //"format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ® "]
        },
        "on-click": "pavucontrol"
    },
    
    "custom/media": {
    	"format": "{icon} {}",
    	"return-type": "json",
    	"max-length": 40,
    	"format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
    	"on-click": "playerctl play-pause --player=spotify,firefox next",
    	"on-click-right": "playerctl stop --player=spotify,firefox next",
    	"smooth-scrolling-threshold": 3, // This value was tested using a trackpad, it should be lowered if using a mouse.
    	"on-scroll-up": "playerctl next --player=spotify,firefox next",
    	"on-scroll-down": "playerctl previous --player=spotify,firefox next",
    	"exec": "python $HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources/custom_modules folder
    },

    "custom/powermenu": {
   	"format": " ÔÄë ",
	"on-click": "wlogout -p layer-shell"	
    },

    "custom/apps": {
    	"format": "Apps",
	"on-click": "wofi -c $HOME/.config/wofi/config-lmenu"
    }
}
